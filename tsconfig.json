{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"strict": true,
		"esModuleInterop": false,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"jsx": "react-jsx",
		"noEmit": true,
		"types": ["electron"]
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.tsx"
	]
}
